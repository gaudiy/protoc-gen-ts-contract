{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "lint": { "outputs": [] },
    "test": { "dependsOn": ["build", "^build"], "outputs": ["coverage/**"] },
    "check": { "dependsOn": ["lint", "test", "^check"], "outputs": [] },
    "clean": { "cache": false }
  },
  "globalDependencies": ["tsconfig.base.json"]
}
